#!/usr/bin/evn node
/* vim: set filetype=javascript : */

var fs = require("fs");
var browserify = require("browserify");

var inFile = "./src/scripts/index.js";
var outDir = "./webapp/scripts/"
var outFile = outDir+"main.js";

// Create "webapp/scripts" dir if it dones't exists
try {
	fs.mkdirSync(outDir);
} catch(e) {}

var out = fs.createWriteStream(outFile, "utf8");
browserify({ debug: true })
	.add(inFile)
	.bundle()
	.pipe(out);
